@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "登陆";
}

@section styles{
    <style>
        .flex-box-center {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        .login-box {
            width: 400px;
            margin: auto;
            padding: 10px;
            border: 1px solid #e0e0e0;
            background-color: #f9f9f9;
        }

        .login-title {
            height: 40px;
            text-align: center;
            font-size: 20px;
            background-color: #d5d5d5;
            margin: -11px -11px 30px -11px;
            vertical-align: middle;
            line-height: 40px;
        }

        .ver-code {
            width: 200px;
        }

        .code-img {
            width: 88px;
            float: right;
            cursor: pointer;
        }

        .el-form {
            width: 100%;
        }
    </style>
}

@section scripts{
    @*@Html.UsePageJs()*@
}

<div class="flex-box-center">
    <div class="login-box" v-loading="isLogin">
        <div class="login-title">后台管理员登陆</div>
        <el-form ref="form" :model="form" :rules="rules" label-width="70px">
            <el-form-item label="用户名" prop="userName">
                <el-input v-model="form.userName"></el-input>
            </el-form-item>
            <el-form-item label="密码" prop="password">
                <el-input type="password" v-model="form.password"></el-input>
            </el-form-item>
            <el-form-item label="验证码" prop="code">
                <el-input class="ver-code" v-model="form.code"></el-input>
                <img class="code-img" src="/Home/CodeImage"
                     data-src="/Home/CodeImage" @@click="imgClick" />
            </el-form-item>
            <el-form-item>
                <el-button type="primary" @@click="loginSubmit">登陆</el-button>
                <el-button>重置</el-button>
            </el-form-item>
        </el-form>
    </div>
</div>
